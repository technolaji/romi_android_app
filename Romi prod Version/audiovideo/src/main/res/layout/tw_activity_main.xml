<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="name" />

    <Button
        android:id="@+id/start_vedio_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editText"
        android:onClick="startVideoCall"
        android:text="start call" />

    <Button
        android:id="@+id/start_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/start_vedio_button"
        android:onClick="startVideoCall"
        android:text="start call" />


    <FrameLayout
        android:id="@+id/theres"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/start_service"
        android:layout_toEndOf="@+id/editText"
        android:layout_toRightOf="@+id/editText" />

    <FrameLayout
        android:id="@+id/ours"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignEnd="@+id/start_vedio_button"
        android:layout_alignRight="@+id/start_vedio_button"
        android:layout_alignTop="@+id/theres"
        android:layout_marginTop="79dp" />


</RelativeLayout>
