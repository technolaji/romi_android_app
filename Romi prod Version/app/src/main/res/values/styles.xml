    <style name="Input.White" parent="White">
        <item name="android:maxLines">1</item>
        <item name="android:layout_marginTop">@dimen/input_margin</item>
        <item name="android:layout_marginBottom">@dimen/input_margin</item>
        <item name="android:layout_marginRight">@dimen/input_margin</item>
        <item name="android:layout_marginLeft">@dimen/input_margin</item>
        <item name="android:textSize">@dimen/input_text_size</item>
